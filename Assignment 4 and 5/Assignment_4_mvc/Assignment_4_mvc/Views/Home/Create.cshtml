@model Assignment_4_mvc.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@using (Html.BeginForm("CreateAccount", "Home"))
{
    <p>
        Account Number: @Html.TextBoxFor(a => a.AccountNumber)
    </p>
    
    <p>
        Name: @Html.TextBoxFor(a => a.Name)
    </p>
    
    <p>
        Current Balance: @Html.TextBoxFor(a => a.CurrentBalance)
    </p>
    
    <input type="submit" value="Create Account" />
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
